<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayout18"
        android:background="#39e8f4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DO YOU WANT TO QUIT?"
            android:id="@+id/textView22"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout18"
        android:id="@+id/relativeLayout19">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="0.50"
            android:text="Cancel"
            android:onClick="false"
            android:background="#181f3e"
            android:typeface="monospace"
            android:textColor="#fdfdfd"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp" />

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_weight="0.50"
            android:text="Agree"
            android:onClick="true"
            android:background="#181f3e"
            android:typeface="monospace"
            android:textColor="#fdfdfd"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/dialog_cancel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="20dp" />
    </RelativeLayout>

</RelativeLayout>